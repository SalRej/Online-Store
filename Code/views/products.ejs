<%- include('./header.ejs') %>

<div class='mini-header'>
    <p><%=currentSubCategory%></p>
    <p class='num-products'><%=products.length%></p>
</div>

<div class='products-menu-container'>
    <%- include('./products-menu.ejs')%>

    <div class='products-container'>
        <%for(product of products){ %>
            <div class = 'card'>
    
                <div class='image-container'>
                        <img src="../../images/<%=product.image_groups[0].images[0].link%>">
                </div>
    
                <div class='variants-image-holder'>
                    <%for(imageGroup of product.image_groups){%>
                        <%if(imageGroup.view_type=="swatch"){%>
                            <%for(image of imageGroup.images){%>
                                <img class="variants-image" src="../../images/<%=image.link%>"
                                alt="<%=image.alt%>"
                                title="<%=image.title%>">
                            <%}%>
                        <%}%>
                    <%}%>
                </div>
    
                <p class='name'><%=product.name%></p> 
                <p class='price'><%=product.price%> <%=product.currency%></p>
            </div>
            
        <%}%>
    </div>
</div>
<%- include("./footer.ejs")%>

